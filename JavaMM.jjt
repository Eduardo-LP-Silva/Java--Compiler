void BOOLEAN_EXPR(): {}
{
    BOOL_EXPR() [<AND> BOOLEAN_EXPR()]
    | <TRUE>
    | <FALSE>
}

void BOOL_EXPR(): {}
{
    ARIT_EXPR() <LOWER> ARIT_EXPR()
}

void ARIT_EXPR(): {}
{
    ARIT_EXPR_2(1)
    [
        (<ADD> ARIT_EXPR_2(1) | <SUB> ARIT_EXPR_2(1))
    ]
}

void ARIT_EXPR_2(int sign): {}
{
    ARIT_EXPR_3(sign)
    [
        (<MUL> ARIT_EXPR_3(sign) | <DIV> ARIT_EXPR_3(sign))
    ]
}

void ARIT_EXPR_3(int sign): {}
{
    <INTEGER>
    | <SUB> ARIT_EXPR_3(-1)
    | <LPAREN> ARIT_EXPR() <RPAREN>
    | <IDENTIFIER>
}